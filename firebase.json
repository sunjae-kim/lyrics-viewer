{
  "hosting": {
    "public": "packages/client/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 3000
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": {
    "source": "packages/server",
    "predeploy": "npm --prefix packages/server run build"
  }
}
